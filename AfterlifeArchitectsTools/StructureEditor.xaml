<Page x:Class="AfterlifeArchitectsTools.StructureEditor"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AfterlifeArchitectsTools"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="StructureEditor">
    
    <DockPanel Background="White">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="300"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Left Panel -->
            <Border Grid.Column="0" Margin="10" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                <StackPanel Margin="5">
                    <!-- Structure Values Editor Label -->
                    <DockPanel Grid.Column="0" Grid.ColumnSpan="2">
                        <Label DockPanel.Dock="Left" Content="Structure Values Editor"/>
                        <Separator Margin="5"/>
                    </DockPanel>
                    <Separator Background="Transparent"/>

                    <!-- Load and Save Button -->
                    <DockPanel Grid.Column="0" Grid.ColumnSpan="2">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                            </Grid.ColumnDefinitions>

                            <Button Click="structureLoad_Click" VerticalAlignment="Center" Grid.Column="0" Margin="5" Content="Load"/>
                            <Button Click="structureSave_Click" VerticalAlignment="Center" Grid.Column="1" Margin="5" Content="Save"/>
                        </Grid>
                    </DockPanel>
                    
                    <!-- Structure Type Drop-down -->
                    <DockPanel>
                        <Label Content="Structure Type: "/>
                        <ComboBox x:Name="structureType_ComboBox" VerticalAlignment="Center" SelectionChanged="structureType_SelectionChanged" Width="175"/>
                    </DockPanel>
                    
                    <!-- Cost -->
                    <DockPanel>
                        <Label DockPanel.Dock="Left" Content="Cost: "/>
                        <TextBox x:Name="cost" TextChanged="cost_TextChanged" PreviewTextInput="cost_PreviewTextInput" VerticalAlignment="Center" HorizontalAlignment="Right" Width="175" Margin="0, 5, 0, 5"/>
                    </DockPanel>
                    
                    <!-- Tile Size -->
                    <DockPanel>
                        <Label DockPanel.Dock="Left" Content="Tile Size: "/>
                        <TextBox x:Name="size" TextChanged="size_TextChanged" PreviewTextInput="size_PreviewTextInput" VerticalAlignment="Center" HorizontalAlignment="Right" Width="175" Margin="0, 5, 0, 5"/>
                    </DockPanel>
                </StackPanel>
            </Border>

            <!-- Right Panel -->
            <Border Grid.Column="1" Margin="10" Background="GhostWhite" BorderBrush="Gainsboro" BorderThickness="1">
                <Grid>
                    <Image x:Name="texturePreview"/>
                </Grid>
            </Border>
        </Grid>
    </DockPanel>
</Page>
