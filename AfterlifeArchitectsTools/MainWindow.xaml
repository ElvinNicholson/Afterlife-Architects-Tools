<Window x:Class="AfterlifeArchitectsTools.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AfterlifeArchitectsTools"
        mc:Ignorable="d"
        Title="Afterlife Architects Tools" Height="500" Width="830">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Tools">
                <MenuItem Header="_Structure Editor" Click="structureEditor_Click"/>
                <MenuItem Header="_Level Editor" Click="levelEditor_Click"/>
                <MenuItem Header="_Advisor Editor" Click="advisorEditor_Click"/>
            </MenuItem>
        </Menu>
        
        <Frame x:Name="mainFrame" NavigationUIVisibility="Hidden"/>
    </DockPanel>
</Window>
